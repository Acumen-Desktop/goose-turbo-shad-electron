{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./index.ts",
    "./shadcn/*": "./shadcn/*",
    "./svelte/*": "./svelte/*",
    "./utils": "./shadcn/utils.ts",
    "./global.css": "./global.css"
  },
  "files": [
    "shadcn",
    "svelte",
    "global.css",
    "index.ts"
