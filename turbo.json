{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		".env*"
	],
	"globalEnv": [
		"NODE_ENV"
	],
	"tasks": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"**/*.{ts,tsx,js,jsx,svelte}"
			],
			"outputs": [
				".svelte-kit/**",
				"!.svelte-kit/cache/**",
				".vite/**",
				"out/**",
				"dist/**"
			]
		},
		"format": {
			"cache": false,
			"inputs": [
				"**/*.{ts,tsx,js,jsx,svelte,json,md}"
			]
		},
		"lint": {
			"dependsOn": [
				"^lint",
				"format"
			],
			"inputs": [
				"**/*.{ts,tsx,js,jsx,svelte}"
			]
		},
		"check-types": {
			"dependsOn": [
				"^check-types"
			],
			"inputs": [
				"**/*.{ts,tsx,svelte}"
			]
		},
		"check": {
			"dependsOn": [
				"^check"
			],
			"inputs": [
				"**/*.{ts,tsx,svelte}"
			]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"package": {
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"**/*.{ts,tsx,js,jsx}"
			],
			"outputs": [
				"out/**",
				"dist/**"
			]
		},
		"make": {
			"dependsOn": [
				"^build",
				"package"
			],
			"inputs": [
				"**/*.{ts,tsx,js,jsx}"
			],
			"outputs": [
				"out/**",
				"dist/**"
			]
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"start:apps": {
			"cache": false,
			"persistent": true
		}
	}
}
