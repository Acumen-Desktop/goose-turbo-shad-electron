{
	"name": "goose-desktop",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"packageManager": "yarn@4.6.0",
	"workspaces": [
		"apps/*",
		"packages/*",
		"desktop/*"
	],
	"scripts": {
		"build": "turbo run build",
		"check": "turbo run check",
		"check-types": "turbo run check-types",
		"dev": "turbo run dev",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint -- --fix",
		"start": "turbo run start --filter=@goose/desktop",
		"start:apps": "turbo run start:apps --filter=@goose/desktop",
		"validate": "turbo run format lint check-types check --continue --no-daemon",
		"yarn-up": "yarn workspaces foreach --all -pv exec yarn-upgrade-all"
	},
	"dependencies": {
		"@goose/typescript-config": "workspace:*",
		"svelte": "^5.20.2",
		"vite": "^6.1.1"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.20.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.1.1",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^16.0.0",
		"ignore": "^7.0.3",
		"prettier": "^3.5.1",
		"prettier-plugin-packagejson": "^2.4.12",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte-check": "^4.1.4",
		"tailwindcss": "^4.0.0",
		"tslib": "^2.8.1",
		"turbo": "^2.4.4",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.24.1",
		"vitest": "^3.0.7",
		"yarn-upgrade-all": "^0.7.4"
	},
	"engines": {
		"node": ">=18"
	},
	"resolutions": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.20.0",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"prettier": "^3.5.1",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.20.2",
		"svelte-check": "^4.1.4",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.24.1",
		"vite": "^6.1.1",
		"vitest": "^3.0.7"
	}
}
